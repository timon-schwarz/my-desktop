#!/bin/bash

# Define the path to the target file that we're going to check.
global_config="/etc/xdg/swaylock/config"
user_config="$HOME/.config/swaylock/config"

# Use an if-else statement to check if the file exists.
if [ -f "$user_config" ]
then
    exec swaylock -C "$user_config" "$@"
else
    exec swaylock -C "$global_config" "$@"
fi
