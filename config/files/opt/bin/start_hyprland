#!/bin/bash

# Define the path to the target file that we're going to check.
global_config="/etc/xdg/hypr/hyprland.conf"
user_config="$HOME/.config/hypr/hyprland.conf"

# Use an if-else statement to check if the file exists.
grep -q -m 1 -E "autogenerated[[:blank:]]*=[[:blank:]]*1" "$user_config"
if [ "$?" -ne 0 ] && [ -f "$user_config" ]; then
    exec Hyprland --config "$user_config" "$@"
else
    exec Hyprland --config "$global_config" "$@"
fi

